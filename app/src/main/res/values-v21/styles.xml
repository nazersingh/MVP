        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>
    <!--****************************************************************************Dialogue Style-->
    <style name="DialogTheme" >
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:actionMenuTextColor">@color/colorPrimaryDark</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <!--******************************************************************LinearLayoutStyles-->
    <style name="LinearLayoutvertical" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="LinearLayoutHorizontal" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--******************************************************************************TabLayout-->
    <style name="CustomTabs" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/TabColorUnSelected</item>
    </style>

<!--***************************************************************************************CheckBox Style-->

