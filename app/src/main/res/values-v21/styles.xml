<!--**************************************************************************************TextInputLayout-->
    <style name="MyTextInputLayout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/textInputLayoutHintColor</item>
        <item name="android:textSize">@dimen/text_20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/textColorRed</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlNormal">@color/edittextLinegrey</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>


    </style>

    <!--******************************************************************************EditText Style-->

    <style name="MyEditTextStyle" parent="android:Widget.EditText">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/EditTextColor</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>
    <style name="MyEditTextBlackStyle" parent="android:Widget.EditText">
